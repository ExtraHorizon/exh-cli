{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "createMode": {
      "enum": [
        "default",
        "permissionRequired"
      ],
      "type": "string"
    },
    "deleteMode": {
      "enum": [
        "permissionRequired",
        "linkedUsersOnly"
      ],
      "type": "string"
    },
    "readMode": {
      "enum": [
        "default",
        "allUsers",
        "enlistedInLinkedGroups"
      ],
      "type": "string"
    },
    "updateMode": {
      "enum": [
        "default",
        "creatorOnly",
        "disabled",
        "linkedGroupsStaffOnly"
      ],
      "type": "string"
    },
    "groupSyncMode": {
      "type": "string",
      "enum": [
        "disabled",
        "creatorPatientEnlistments",
        "linkedUsersPatientEnlistments"
      ]
    },
    "defaultLimit": {
      "type": "integer"
    },
    "maximumLimit": {
      "type": "integer"
    },
    "statuses": {
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_-]{0,49}$": {
          "type": "object"
        }
      },
      "type": "object",
      "additionalProperties": false
    },
    "creationTransition": {
      "properties": {
        "actions": {
          "$ref": "#/definitions/actions"
        },
        "afterActions": {
          "$ref": "#/definitions/afterActions"
        },
        "conditions": {
          "$ref": "#/definitions/conditions"
        },
        "toStatus": {
          "pattern": "^[A-Za-z][A-Za-z0-9_-]{0,49}$",
          "type": "string"
        },
        "type": {
          "const": "manual"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "toStatus"
      ],
      "type": "object"
    },
    "transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "enum": [
              "manual",
              "automatic"
            ],
            "type": "string"
          },
          "fromStatuses": {
            "minLength": 1,
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "toStatus": {
            "type": "string"
          },
          "actions": {
            "$ref": "#/definitions/actions"
          },
          "afterActions": {
            "$ref": "#/definitions/afterActions"
          },
          "conditions": {
            "$ref": "#/definitions/conditions"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "type",
          "fromStatuses",
          "toStatus"
        ]
      }
    },
    "indexes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "asc",
                    "desc",
                    "text"
                  ]
                }
              }
            }
          },
          "options": {
            "type": "object",
            "properties": {
              "unique": {
                "type": "boolean"
              },
              "sparse": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "fields"
        ]
      }
    },
    "properties": {
      "type": "object"
    }
  },
  "required": [
    "name",
    "description",
    "statuses",
    "creationTransition",
    "properties"
  ],
  "additionalProperties": false,
  "definitions": {
    "afterActions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          }
        }
      }
    },
    "actions": {
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "task",
              "set",
              "unset",
              "addItems",
              "removeItems",
              "linkCreator",
              "linkUserFromData",
              "linkEnlistedGroups",
              "linkGroupFromData",
              "measurementReviewedNotification",
              "notifyAlgoQueueManager"
            ]
          }
        },
        "required": [
          "type"
        ]
      },
      "type": "array"
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          { "$ref": "#/definitions/inputCondition" },
          { "$ref": "#/definitions/documentCondition" },
          { "$ref": "#/definitions/initiatorHasRelationToUserInDataCondition" },
          { "$ref": "#/definitions/initiatorHasRelationToGroupInData" }
        ]
      }
    },
    "inputCondition": {
      "type": "object",
      "properties": {
        "configuration": { "$ref": "#/definitions/configurations" },
        "type": {
          "type": "string",
          "enum": ["input"]
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "documentCondition": {
      "type": "object",
      "properties": {
        "configuration": { "$ref": "#/definitions/configurations" },
        "type": {
          "type": "string",
          "enum": ["input"]
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "initiatorHasRelationToUserInDataCondition": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "initiatorHasRelationToUserInData"
          ]
        },
        "userIdField": {
          "type": "string"
        },
        "relation": {
          "type": "string",
          "enum": ["isStaffOfTargetPatient"]
        }
      },
      "required": [
        "type"
      ]
    },
    "initiatorHasRelationToGroupInData": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "initiatorHasRelationToGroupInData"
          ]
        },
        "groupIdField": {
          "type": "string"
        },
        "relation": {
          "type": "string",
          "enum": ["staff", "patient"]
        },
        "requiredPermission": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "objectConfiguration": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["object"]
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "queryable": {
          "type": "boolean"
        }
      },
      "additionalProperties": true,
      "required": ["type"]
    },
    "arrayConfiguration": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["array"]
        },
        "items": {
          "type": "object"
        },
        "minItems": {
          "type": "number"
        },
        "maxItems": {
          "type": "number"
        },
        "contains": {
          "type": "object"
        },
        "queryable": {
          "type": "boolean"
        }
      }
    },
    "stringConfigurations": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string"]
        },
        "minLength": {
          "type": "number"
        },
        "maxLength": {
          "type": "number"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "const": {
          "type": "string"
        },
        "pattern": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": ["date-time"]
        },
        "queryable": {
          "type": "boolean"
        }
      }
    },
    "numberConfigurations": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string"]
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "const": {
          "type": "number"
        },
        "queryable": {
          "type": "boolean"
        }
      }
    },
    "booleanConfigurations": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["boolean"]
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "boolean"
          }
        },
        "const": {
          "type": "boolean"
        },
        "queryable": {
          "type": "boolean"
        }
      },
      "required": ["type"]
    },
    "configurations": {
      "type": "object",
      "anyOf": [
        {"$ref": "#/definitions/objectConfiguration"},
        {"$ref": "#/definitions/arrayConfiguration"},
        {"$ref": "#/definitions/stringConfigurations"},
        {"$ref": "#/definitions/numberConfigurations"},
        {"$ref": "#/definitions/booleanConfigurations"}
    ]
    }
  }
}
