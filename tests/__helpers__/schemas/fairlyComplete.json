    "inactive": {
      "description": "The item is inactive"
    }
  },

  "creationTransition": {
    "type": "manual",
    "toStatus": "active",
    "conditions": [
      {
        "type": "input",
        "configuration": {
          "type": "object",
          "properties": {
            "minimalString": { "type": "string" }
          }
        },
        "description": "aaa"
      },
      {
        "type": "input",
        "configuration": {
          "type": "object",
          "properties": {
            "minimalObject": {
              "type": "object",
              "properties": {
                "name": { "type": "string" }
              }
            }
          }
        }
      }
    ],
    "actions": [
      {
        "type": "task",
        "functionName": "myFunction"
      },
      {
        "type": "task",
        "description": "A task action with all options",
        "functionName": "myFunction",
        "data": {
          "anyThingGoes": true
        }
      },
      {
        "type": "set",
        "field": "initialized",
        "value": false
      },
      {
        "type": "set",
        "description": "A set action with all options",
        "field": "initialized",
        "value": false
      },
      {
        "type": "unset",
        "fields": ["initialized"]
      },
      {
        "type": "unset",
        "description": "A unset action with all options",
        "fields": ["initialized"]
      },
      {
        "type": "addItems",
        "field": "initialized",
        "values": [{ "a": 1 }]
      },
      {
        "type": "addItems",
        "description": "A addItems action with all options",
        "field": "initialized",
        "values": [{ "a": 1 }]
      },
      {
        "type": "removeItems",
        "field": "initialized",
        "values": [{ "a": 1 }]
      },
      {
        "type": "removeItems",
        "description": "A removeItems action with all options",
        "field": "initialized",
        "values": [{ "a": 1 }]
      },
      {
        "type": "linkCreator"
      },
      {
        "type": "linkCreator",
        "description": "A linkCreator action with all options"
      },
      {
        "type": "linkUserFromData",
        "userIdField": "myUserId"
      },
      {
        "type": "linkUserFromData",
        "description": "A linkUserFromData action with all options",
        "userIdField": "myUserId"
      },
      {
        "type": "linkEnlistedGroups"
      },
      {
        "type": "linkEnlistedGroups",
        "description": "A linkEnlistedGroups action with all options",
        "onlyActive": true
      },
      {
        "type": "linkGroupFromData",
        "groupIdField": "myGroupId"
      },
      {
        "type": "linkGroupFromData",
        "description": "A linkGroupFromData action with all options",
        "groupIdField": "myGroupId"
      },
      {
        "type": "measurementReviewedNotification"
      },
      {
        "type": "measurementReviewedNotification",
        "description": "A measurementReviewedNotification action with all options"
      }
    ]
  },

  "transitions": [
    {
      "type": "manual",
      "name": "deactivate",
      "fromStatuses": ["active"],
      "toStatus": "inactive",
      "conditions": [
        {
          "type": "input",
          "configuration": {
            "type": "object",
            "properties": {
              "fullString": { "type": "string" }
            },
            "required": ["fullString"]
          }
        },
        {
          "type": "input",
          "description": "An input condition with all options",
          "configuration": {
            "type": "object",
            "properties": {
              "fullString": { "type": "string" }
            },
            "required": ["fullString"]
          }
        },
        {
          "type": "initiatorHasRelationToUserInData",
          "userIdField": "initiatorId",
          "relation": "isStaffOfTargetPatient"
        },
        {
          "type": "initiatorHasRelationToUserInData",
          "description": "An initiatorHasRelationToUserInData condition with all options",
          "userIdField": "initiatorId",
          "relation": "isStaffOfTargetPatient"
        },
        {
          "type": "initiatorHasRelationToGroupInData",
          "groupIdField": "initiatorGroupId",
          "relation": "staff"
        },
        {
          "type": "initiatorHasRelationToGroupInData",
          "description": "An initiatorHasRelationToGroupInData condition with all options",
          "groupIdField": "initiatorGroupId",
          "relation": "staff",
          "requiredPermission": "deactivate"
        }
      ]
    },
    {
      "type": "automatic",
      "name": "auto-deactivate",
      "fromStatuses": ["active"],
      "toStatus": "inactive",
      "conditions": [
        {
          "type": "document",
          "configuration": {
            "type": "object",
            "properties": {
              "deactivationTimestamp": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": ["deactivationTime"]
          }
        },
        {
          "type": "document",
          "description": "A document condition with all options",
          "configuration": {
            "type": "object",
            "properties": {
              "deactivationTimestamp": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": ["deactivationTime"]
          }
        }
      ]
    }
  ],

  "properties": {
    "minimalString": { "type": "string" },
    
    "fullString": {
      "type": "string",
      "description": "A string with all the options",
      "const": "test",
      "enum": ["test"],
      "minLength": 1,
      "maxLength": 4,
      "pattern": "^[a-z]+$",
      "queryable": true
    },
    
    "date": {
      "type": "string",
      "format": "date-time"
    },

    "minimalNumber": { "type": "number" },

    "fullNumber": {
      "type": "number",
      "description": "A number with all the options",
      "const": 1,
      "enum": [1],
      "minimum": 0,
      "maximum": 10,
      "queryable": true
    },

    "minimalBoolean": { "type": "boolean" },

    "fullBoolean": {
      "type": "boolean",
      "description": "A boolean with all the options",
      "const": true,
      "enum": [true],
      "queryable": true
    },

    "minimalObject": {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },

    "fullObject": {
      "type": "object",
      "description": "An object with all the options",
      "properties": {
        "name": { "type": "string" }
      },
      "required": ["name"],
      "additionalProperties": { "type": "string" },
      "queryable": true
    },

    "minimalArray": {
      "type": "array",
      "items": { "type": "string" }
    },

    "fullArray": {
      "type": "array",
      "description": "An array with all the options",
      "items": { "type": "string" },
      "minItems": 1,
      "maxItems": 3,
      "contains": { "type": "string" },
