{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "target": "ESNext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": "./",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
  ]
}